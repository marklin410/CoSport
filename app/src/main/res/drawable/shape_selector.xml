<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/colorPrimaryT" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryT" />
            <corners
                android:bottomRightRadius="50dp"
                android:topRightRadius="50dp"
                />
        </shape>
    </item>
    <item android:color="@color/colorPrimaryT" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryT" />
            <corners
                android:bottomRightRadius="50dp"
                android:topRightRadius="50dp"
                />
        </shape>
    </item>

    <item android:color="@android:color/transparent"/>

</selector>